<?xml version="1.0" encoding="UTF-8"?>
<robot name="my_robot_arm">
    <!-- アームのグループを定義 -->
    <group name="arm_group">
        <chain base_link="base_link" tip_link="end_effector"/>
    </group>

    <!-- エンドエフェクタの定義 -->
    <end_effector name="end_effector" parent_link="end_effector" group="arm_group"/>

    <!-- デフォルトの状態を定義 -->
    <group_state name="home" group="arm_group">
        <joint name="joint1" value="0"/>
        <joint name="joint2" value="0"/>
        <joint name="joint3" value="0"/>
        <joint name="joint4" value="0"/>
        <joint name="joint5" value="0"/>
    </group_state>

    <!-- 干渉チェックの無効化(必要に応じて) -->
    <disable_collisions link1="base_link" link2="link1" reason="Adjacent"/>
    <disable_collisions link1="link1" link2="link2" reason="Adjacent"/>
    <disable_collisions link1="link2" link2="link3" reason="Adjacent"/>
    <disable_collisions link1="link3" link2="link4" reason="Adjacent"/>
    <disable_collisions link1="link4" link2="end_effector" reason="Adjacent"/>
</robot>
