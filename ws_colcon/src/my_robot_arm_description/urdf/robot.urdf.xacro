<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot_arm">

    <!-- Colors -->
    <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
    </material>

    <!-- World Link -->
    <link name="world"/>

    <!-- Fixed joint between world and base_link -->
    <joint name="world_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.06"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 1: Z-axis rotation -->
    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link1">
        <inertial>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.15" radius="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.15" radius="0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 2: X-axis rotation -->
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link2">
        <inertial>
            <origin xyz="0 0 0.03" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.03 0.03 0.06"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.03 0.03 0.06"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 3: X-axis rotation -->
    <joint name="joint3" type="revolute">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0 0.02 0.1" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link3">
        <inertial>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.03 0.03 0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.03 0.03 0.06"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 4: X-axis rotation -->
    <joint name="joint4" type="revolute">
        <parent link="link3"/>
        <child link="link4"/>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link4">
        <inertial>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 5: Z-axis rotation -->
    <joint name="joint5" type="revolute">
        <parent link="link4"/>
        <child link="end_effector"/>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.571" upper="1.571" effort="100" velocity="1"/>  <!-- -90° to +90° -->
    </joint>

    <link name="end_effector">
        <inertial>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.02 0.02 0.05"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.05"/>
            </geometry>
        </collision>
    </link>

</robot>
