<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot_arm">

    <!-- Colors -->
    <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.2 0.2 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 1: Z-axis rotation -->
    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link1">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 2: X-axis rotation -->
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link2">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 3: X-axis rotation -->
    <joint name="joint3" type="revolute">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link3">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.15"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 4: X-axis rotation -->
    <joint name="joint4" type="revolute">
        <parent link="link3"/>
        <child link="link4"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.356" upper="2.356" effort="100" velocity="1"/>  <!-- -135° to +135° -->
    </joint>

    <link name="link4">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint 5: Z-axis rotation -->
    <joint name="joint5" type="revolute">
        <parent link="link4"/>
        <child link="end_effector"/>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.571" upper="1.571" effort="100" velocity="1"/>  <!-- -90° to +90° -->
    </joint>

    <link name="end_effector">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.05"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.05"/>
            </geometry>
        </collision>
    </link>

</robot>
